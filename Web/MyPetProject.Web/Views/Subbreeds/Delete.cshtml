@model MyPetProject.Data.Models.Subbreed

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var name = Model.Name;
    var picture = Model.PicUrl;
    var description = Model.Description;
    var kingdomName = Model.KingdomName;
    var breedName = Model.BreedName;
    var group = ViewBag.Group;
    var diet = ViewBag.Diet;
    var isPet = ViewBag.IsPet;
    var isFarm = ViewBag.IsFarm;

    <div class="row justify-content-md-center text-center">
        <div class="col-4">
            <h1 class="text-danger">Delete</h1>

            <div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <h3>@name</h3>
                    </div>
                    <p>
                        <div class="card col-12 col-lg-12 game-card">
                            @if (!picture.StartsWith("http") &&
                  !picture.EndsWith(".jpg") &&
                  !picture.EndsWith(".png") &&
                  !picture.EndsWith(".jpeg"))
                            {
                                <img class="card-img-top" src="~/img/no-image.png" alt="Card image cap">
                            }
                            else
                            {
                                <img class="card-img-top" src="@picture" alt="Card image cap">
                            }
                        </div>
                    </p>
                    <div class="col-sm-12">
                        Kingdom Name : @kingdomName
                    </div>
                    <p>
                        <div class="col-sm-12">
                            Breed Name : @breedName
                        </div>
                    </p>
                    <div class="col-sm-12">
                        Description :   @description
                    </div>
                    <p>
                        <div class="col-sm-12">
                            Is Pet Animal : @if (isPet)
                            {<span style="color:green">✔</span>}
                            else
                            { <span style="color:darkred">✘</span>}
                        </div>
                    </p>
                    <div class="col-sm-12">
                        Is Farm Animal : @if (isFarm)
                        {<span style="color:green">✔</span>}
                        else
                        { <span style="color:darkred">✘</span>}
                    </div>

                </div>

                <h3 class="text-danger">Are you sure you want to delete this?</h3>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a href="javascript:history.back()">Go Back</a>
                </form>
            </div>
        </div>
    </div>
}
