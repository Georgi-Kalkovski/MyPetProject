@model IEnumerable<MyPetProject.Data.Models.Subbreed>

@{
    ViewData["Title"] = "Subbreeds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var name = ViewContext.HttpContext.Request.Path.ToString().Split("/").Last().Replace("%20", " ");
    <h1>@name</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <p>
        <a href="javascript:history.back()">Back to breeds</a>
    </p>
    <table class="table">
        <tbody>
            <div class="row mt-2 mb-4">
                @foreach (var item in Model)
                {
                    <div class="card col-6 col-lg-3 game-card">
                        <a asp-action="@item.Name">
                            <img class="card-img-top" src="@item.PicUrl" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                <a href="@item.Name" class="btn btn-primary">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Name" class="btn btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Name" class="btn btn-danger">Delete</a>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </tbody>
    </table>
}