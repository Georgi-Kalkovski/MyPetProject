@using MyPetProject.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - Zooing@*@GlobalConstants.SystemName*@</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="navBar" class="navbar navbar-inverse navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 sticky" data-spy="affix" data-offset-top="10">
            <div class="container" style="margin-bottom: -5px">
                <a class="nav-link" style="color:black" asp-area="" asp-controller="Home" asp-action="Index"><h4>Zooing@*@GlobalConstants.SystemName*@</h4></a>
                <a class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                   aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Groups">Groups</a>
                        </li>
                        <li class="dropdown">
                            <a class="btn dropdown-toggle nav-link text-dark" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="dropdownMenu" data-toggle="dropdown">Categories</span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item dropdownMenu" asp-area="" asp-controller="Kingdoms" asp-action="Index">Kingdoms</a>
                                <a class="dropdown-item dropdownMenu" asp-area="" asp-controller="Breeds" asp-action="Index">Breeds</a>
                                <a class="dropdown-item dropdownMenu" asp-area="" asp-controller="Subbreeds" asp-action="Index">Subbreeds</a>
                            </div>
                        </li>
                        <li class="dropdown">
                            <a class="btn dropdown-toggle nav-link text-dark" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="dropdownMenu">Habitats</span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item dropdownMenu" asp-area="" asp-controller="Habitats" asp-action="HomeAnimals">Home Animals</a>
                                <a class="dropdown-item dropdownMenu" asp-area="" asp-controller="Habitats" asp-action="FarmAnimals">Farm Animals</a>
                                <a class="dropdown-item dropdownMenu" asp-area="" asp-controller="Habitats" asp-action="WildAnimals">Wild Animals</a>
                            </div>
                        </li>
                        <li class="dropdown">
                            <a class="btn dropdown-toggle nav-link text-dark" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="dropdownMenu">Foods</span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item dropdownMenu" asp-area="" asp-controller="FoodTypes" asp-action="Index">Food Types</a>
                                <a class="dropdown-item dropdownMenu" asp-area="" asp-controller="Foods" asp-action="Index">Foods</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Search" asp-action="SearchKingdoms">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container content">

        <!--  <partial name="_CookieConsentPartial" />  -->
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer id="footer" class="page-footer border-top footer text-muted navbar-fixed-bottom text-center" style="margin-bottom: auto; background-color: white; list-style-type: none; line-height:1">

        <nav class="navbar navbar-expand-sm bg-white dropup" style="border-style: none; display: inline-block;">
            <div class="container">
                <ul class="navbar navbar-expand-sm bg-white navbar-nav flex-grow-1 justify-content-start dropup" style="border-style: none;">
                    <li id="contactMeText" class="nav-link text-dark" style="text-align: center;">Contact Me: </li>
                    <a class="contactMe nav-link" href="https://github.com/Georgi-Kalkovski"><img src="~/img/github.svg" /></a>
                    <a class="contactMe nav-link" href="https://www.linkedin.com/in/georgi-kalkovski/"><img src="~/img/linkedin.svg" /></a>
                    <a class="contactMe nav-link" href="mailto:g.kalkovski.92@gmail.com"><img src="~/img/gmail.svg" /></a>
                    <a class="contactMe nav-link" href="https://www.facebook.com/georgi.kalkovski"><img src="~/img/facebook.svg" /></a>
                    <a class="contactMe nav-link" href="https://discord.com/users/242250226545590274"><img src="~/img/discord.svg" /></a>
                </ul>
            </div>
        </nav>

        <div id="copyright">
            &copy; @DateTime.UtcNow.Year - Zooing@*@GlobalConstants.SystemName*@
        </div>

        <!-- Back to top button -->
        <a onclick="scrollFunction()" href="#" id="backToTop"><h3 style="margin-bottom:-20px;">⮝</h3></a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/customjs.js" asp-append-version="true"></script>

    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
