@model MyPetProject.Web.ViewModels.Breeds.BreedInputModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-center text-center">
    <div class="col-4">
        <h1>Edit</h1>

        <h4>Breed</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PicUrl" class="control-label"></label>
                        <input asp-for="PicUrl" class="form-control" />
                        <span asp-validation-for="PicUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" type="text" class="form-control" style="height: calc(2.5em + 4.75rem + 2px);" placeholder="Description of the breed..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KingdomName" class="control-label">Kingdom Name</label>
                        <select asp-for="KingdomName" asp-items="ViewBag.KingdomName">
                            <option value="">--Select--</option>
                        </select>
                        <br>
                        <span asp-validation-for="KingdomName" class="text-danger"></span>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                </form>
            </div>
            <div>
                <a href="javascript:history.back()">Go Back</a>
            </div>
        </div>
    </div>

