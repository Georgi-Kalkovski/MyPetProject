@model IEnumerable<MyPetProject.Data.Models.Breed>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewContext.HttpContext.Request.Path.ToString().Split("/").Last().Replace("%20", " ")</h1>

<p>
    <a asp-action="Create">Create New Breed</a>
</p>
<p>
    <a href="javascript:history.back()">Back to Kingdom</a>
</p>
<table class="table">
    <tbody>
        <div class="row mt-2 mb-4">
            @foreach (var item in Model)
            {
                <div class="card col-6 col-lg-3 game-card">
                    <a asp-controller="Subbreeds" asp-action="@item.Name">
                        @if (!item.PicUrl.StartsWith("http"))
                        {
                            <img class="card-img-top" src="~/img/breeds/@Html.DisplayFor(modelItem => item.PicUrl)" alt="Card image cap">
                        }
                        else
                        {
                            <img class="card-img-top" src="@item.PicUrl" alt="Card image cap">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <a href="@item.Name" class="btn btn-primary">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Name" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Name" class="btn btn-danger">Delete</a>
                        </div>
                    </a>
                </div>
            }
        </div>
    </tbody>
</table>
