@model IEnumerable<MyPetProject.Data.Models.Breed>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Breeds</h1>

<p>
    <a asp-action="Create">Create New Breed</a>
</p>
<table class="table">
    <tbody>
        <div class="row mt-2 mb-4">
            @foreach (var item in Model)
            {
                <div class="card col-6 col-lg-3 game-card">
                    <a asp-action="Breeds">
                        <img class="card-img-top" src="~/img/breeds/@item.KingdomId/@Html.DisplayFor(modelItem => item.PicUrl)" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <a href="@item.Id" class="btn btn-primary">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </a>
                </div>
            }
        </div>
    </tbody>
</table>
